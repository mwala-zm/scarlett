<div class="flex flex-col w-full">
  <div class="my-4">
    <%= link_to "home", root_path, class: "uppercase rounded-[20px] font-archivo border-2 border-green-600 py-[12px] px-[32px]" %>
  </div>

  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl font-archivo">Crops</h1>
      <%= link_to "New crop", new_crop_path, class: "rounded-[20px] py-[12px] px-[32px] bg-blue-600 text-white block font-medium" %>
    </div>

    <div id="crops" class="min-w-full">
      <%= render @crops %>
    </div>
  </div>

</div>
