<div class="flex flex-col w-full">
  <div class="my-4 flex flex-row space-x-8 items-center">
    <%= link_to "home", root_path, class: "uppercase rounded-[20px] font-archivo border-2 border-green-600 py-[12px] px-[32px]" %>
    <div>
      <h2 class="font-archivo">
        <%= current_user.first_name + " " + current_user.last_name %>
      </h2>
    </div>
  </div>

  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>


    <div class="flex justify-between items-center">
      <h1 class="font-clash font-semibold text-4xl">Fields</h1>
    <%= combobox_tag "fields", @fields %>
      <%= link_to "New field", new_field_path, class: "rounded-[20px] py-[12px] px-[32px] bg-blue-600 text-white block font-medium font-archivo" %>
    </div>

    <div id="fields" class="min-w-full">
      <%= render @fields %>
    </div>
  </div>
</div>
